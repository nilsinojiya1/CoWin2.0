<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    tools:context=".fragments.HomeFragment"
    android:layout_margin="@dimen/_9sdp">

    <Button
        android:id="@+id/btnFindByPin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_weight="2"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/biscay"
        android:background="@drawable/btn_rounded"
        android:backgroundTint="@color/yellow_btn"
        android:text="@string/search_by_pincode"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnDownloadCertificate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:layout_below="@+id/btnFindByPin"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_weight="2"
        android:background="@drawable/btn_rounded"
        android:backgroundTint="@color/yellow_btn"
        android:text="@string/download_certificate"
        android:textAllCaps="false"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/biscay"/>

</RelativeLayout>